<h1>Sign Up</h1>

<%= form_for @user do |f| %>
  <div>
    <%= f.label :Name %><br>
    <%= f.text_field :name, autofocus: true %><br><br>
  </div>
  <div>
    <%= f.label :Email %><br>
    <%= f.text_field :email %><br><br>
  </div>

  <div>
    <%= f.label :Password %><br>
    <%= f.password_field :password %><br><br>
  </div>
  <div>
    <%= f.label :Password_confirmation %><br>
    <%= f.password_field :password_confirmation %><br><br>
  </div>
  <div>
    <%= f.submit "Sign up!" %><br><br>
  </div>
<% end %>
